# Maintainer: rajan pandey <pandey11rajan@gmail.com>
pkgname=heera-dock
pkgver=r3.1e352ac
pkgrel=1
pkgdesc="Heera Dock"
arch=('x86_64')
url="https://github.com/heera-os/heera-dock.git"
license=('GPL3')
groups=('heeraDE')
depends=('heera-user-interface' 'heera-system-library' 'qt5-declarative' 'kwindowsystem')
makedepends=('git' 'cmake' 'gcc' 'make' 'qt5-tools' )
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${pkgname}::git+${url}")
md5sums=('SKIP')

pkgver() {
        cd "$srcdir/${pkgname}"

	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/${pkgname}"
        mkdir -p build && cd build
        cmake ..
	make
}

package() {
	cd "$srcdir/${pkgname}/build"
        cd build
	make DESTDIR="$pkgdir/" install
}


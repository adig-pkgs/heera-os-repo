# Maintainer: rajan pandey <pandey11rajan@gmail.com>
pkgname=heera-dock
pkgver=0.01alfa
pkgrel=1
pkgdesc="Heera Dock"
arch=('x86_64')
url="https://github.com/heera-os/heera-dock.git"
license=('GPL3')
groups=('heeraDE')
depends=('heera-user-interface' 'heera-system-library' 'qt5-declarative' 'kwindowsystem')
makedepends=('git' 'cmake' 'gcc' 'ninja')
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${pkgname}::git+${url}"
prepare() {
	cd "$srcdir/${pkgname}"


pkgver() {
        cd "$srcdir/${pkgname}"

	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/${pkgname}"
        mkdir -p build && cd build
        rm -f CMakeCache.txt
	echo "Inside "$(pwd)
	cmake \
		-G Ninja \
		
		-DCMAKE_BUILD_TYPE=Release \
		..
	cmake --build .
}

package() {
	cd "$srcdir/${pkgname}"
        cd build
	DESTDIR="$pkgdir/" cmake --install .
}


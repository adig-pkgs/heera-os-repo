# Maintainer: rajan pandey <pandey11rajan@gmail.com>
pkgname=heera-launcher
pkgver=0,01alfa
pkgrel=1
pkgdesc="Heera Launcher"
arch=('x86_64')
url="https://github.com/heera-os/heera-launcher.git"
license=('GPL3')
groups=('heeraDE')
depends=('qt5-declarative' 'qt5-quickcontrols2' 'kwindowsystem')
makedepends=('git' 'cmake' 'extra-cmake-modules' 'gcc' 'ninja')
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${pkgname}::git+${url}"
	
md5sums=('SKIP'
	)

prepare() {
        cd "$srcdir/${pkgname}"

       
}

pkgver() {
        cd "$srcdir/${pkgname}"

	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/${pkgname}"
        mkdir -p build && cd build
        rm -f CMakeCache.txt
	cmake \
		-G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		..
	cmake --build .
}

package() {
	cd "$srcdir/${pkgname}"
        cd build
	DESTDIR="$pkgdir/" cmake --install .
}

